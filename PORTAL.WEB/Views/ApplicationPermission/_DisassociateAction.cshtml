@model PORTAL.DAL.EF.Models.ApplicationAction_ApplicationPermission
<div id="applicationactionpermission-form-container">
    <form asp-controller="ApplicationPermission" asp-action="DisassociateAction"
          data-ajax-mode="replace" data-ajax-update="#applicationactionpermission-modal-content"
          data-ajax-loading="#applicationactionpermission-deleteloading"
          data-ajax="true" data-ajax-method="POST" class="form-horizontal">
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 id="myModalLabel" class="modal-title">Disassociate Action</h4>
        </div>
        <div class="modal-body" id="applicationactionpermission-modal-body">
            @{ 
                var recordId = Model.Id;
            }
            <div class="row">
                <div class="col-md-12 control-label-right">
                    <input type="hidden" id="recordId" name="Id" value="@recordId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="col-md-12">
                    <p style="margin-left:25px;">Are you sure you want to delete this record?</p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ApplicationAction.ApplicationAction_Id):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ApplicationAction.ApplicationAction_Id)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ApplicationAction.Description):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ApplicationAction.Description)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.AccessType):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.AccessType)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-flat btn-default" data-dismiss="modal" style="width:65px;">Cancel</button>
            <button type="submit" class="btn btn-sm btn-flat btn-danger">Disassociate<i id="applicationactionpermission-deleteloading" class="fa fa-spinner fa-spin" style="display:none"></i></button>
        </div>
    </form>
</div>