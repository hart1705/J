@model PORTAL.WEB.Models.GSMModemViewModels.ModemModel
@{
    Html.RenderPartial("_FormBehavior", Model.FormBehavior);
    var action = string.Empty;
    var controller = "Modem";
    if (Model.FormType == Global.FormType.Create || Model.FormType == Global.FormType.Update)
    {
        action = Model.FormType == Global.FormType.Create ? "New" : "Update";
    }
}
<form asp-controller="@controller" asp-action="@action"
      id="record-form"
      data-ajax-mode="replace"
      data-ajax-update="#record-form-container"
      data-ajax-loading="#application_loading"
      data-ajax="true"
      data-ajax-complete="Portal.Exec_FormBehavior"
      data-ajax-method="POST"
      class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FormType" />
    <div class="form-group form-group-sm">
        <label asp-for="GSMModem_Id" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="GSMModem_Id" type="text" class="form-control" />
            <span asp-validation-for="GSMModem_Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="PortName" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="PortName" class="form-control" />
            <span asp-validation-for="PortName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="BaudRate" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <select asp-for="BaudRate" class="form-control">
                <option value="9600">9600</option>
                <option value="19200">19200</option>
                <option value="38400">38400</option>
                <option value="57600">57600</option>
                <option value="115200">115200</option>
            </select>
            <span asp-validation-for="BaudRate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="ReadTimeout" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="ReadTimeout" class="form-control" />
            <span asp-validation-for="ReadTimeout" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="WriteTimeout" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="WriteTimeout" class="form-control" />
            <span asp-validation-for="WriteTimeout" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="GSMStatus" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <select asp-for="GSMStatus" asp-items="Html.GetEnumSelectList<Enums.GSMStatus>()" class="form-control"></select>
            <span asp-validation-for="GSMStatus" class="text-danger"></span>
        </div>
    </div>
</form>
<form asp-controller="@controller" asp-action="ChangeStatus"
      id="changestatus-form"
      data-ajax-mode="replace"
      data-ajax-update="#record-form-container"
      data-ajax-loading="#application_loading"
      data-ajax="true"
      data-ajax-complete="Portal.Exec_FormBehavior"
      data-ajax-method="POST"
      class="form-horizontal">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FormType" />
</form>