@model PORTAL.WEB.Models.PermissionViewModels.Permission
@{
    Html.RenderPartial("_FormBehavior", Model.FormBehavior);
    var action = string.Empty;
    if (Model.FormType == Global.FormType.Create || Model.FormType == Global.FormType.Update)
    {
        action = Model.FormType == Global.FormType.Create ? "New" : "Update";
    }
}

<form asp-controller="ApplicationPermission" asp-action="@action"
      id="record-form"
      data-ajax-mode="replace"
      data-ajax-update="#record-form-container"
      data-ajax-loading="#application_loading"
      data-ajax="true"
      data-ajax-complete="Portal.Exec_FormBehavior"
      data-ajax-method="POST"
      class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FormType" />
    <div class="form-group form-group-sm">
        <label asp-for="ApplicationPermission_Id" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="ApplicationPermission_Id" class="form-control" />
            <span asp-validation-for="ApplicationPermission_Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="Description" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <textarea asp-for="Description" class="form-control" rows="5" style="resize:vertical;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    @*<div class="form-group form-group-sm">
        <label asp-for="Id" class="control-label col-md-3 "></label>
        <div class="col-md-9">
            <lookup input-id="PermissionId"
                    lookup-id="lookup-project"
