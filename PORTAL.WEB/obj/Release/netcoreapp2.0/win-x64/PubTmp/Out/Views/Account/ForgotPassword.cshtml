@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<div class="col-md-12">
    <div class="login-box">
        <div class="login-logo">
            <small>A J M P</small>
        </div>
        <div class="login-box-body">
            <div class="row">
                <form asp-action="ForgotPassword" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group form-group-sm">
                        <label>Forgot your password</label><br />
                        <input asp-for="Email" class="form-control" placeholder="Email Address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-group-sm">
                        <button type="submit" class="col-md-12 btn btn-sm btn-flat btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
