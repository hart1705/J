@model PORTAL.WEB.Models.ApplicationUserViewModels.RegisterUserModel
@{ Html.RenderPartial("_FormBehavior", Model.FormBehavior); }
<form asp-controller="ApplicationUser" asp-action="New"
      id="record-form"
      data-ajax-mode="replace"
      data-ajax-update="#record-form-container"
      data-ajax-loading="#application_loading"
      data-ajax="true"
      data-ajax-complete="Portal.Exec_FormBehavior"
      data-ajax-method="POST"
      class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="FormType" />
    <div class="form-group form-group-sm">
        <label asp-for="UserName" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="FirstName" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="MiddleName" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="MiddleName" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="LastName" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="Email" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="PhoneNumber" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
</form>