@model PORTAL.WEB.Models.ApplicationRoleViewModels.ApplicationRoleModel
@{
    Html.RenderPartial("_FormBehavior", Model.FormBehavior);
    var action = string.Empty;
    if (Model.FormType == Global.FormType.Create || Model.FormType == Global.FormType.Update)
    {
        action = Model.FormType == Global.FormType.Create ? "New" : "Update";
    }
}
<form asp-controller="ApplicationRole" asp-action="@action"
      id="record-form"
      data-ajax-mode="replace"
      data-ajax-update="#record-form-container"
      data-ajax-loading="#application_loading"
      data-ajax="true"
      data-ajax-complete="Portal.Exec_FormBehavior"
      data-ajax-method="POST"
      class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FormType" />
    <div class="form-group form-group-sm">
        <label asp-for="Name" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            @if (Model.FormType == Global.FormType.Create)
            {
                <input asp-for="Name" class="form-control" />
            }
            else
            {
                <input asp-for="Name" readonly class="form-control" />
            }
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="Description" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <textarea asp-for="Description" class="form-control" rows="5" style="resize:vertical;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label asp-for="IsSysAdmin" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <select asp-for="IsSysAdmin" class="form-control">
                <option value="False">No</option>
                <option value="True">Yes</option>
            </select>
            <span asp-validation-for="IsSysAdmin" class="text-danger"></span>
        </div>
    </div>
    @*<div class="form-group form-group-sm">
        <label asp-for="Id" class="control-label col-md-3 "></label>
        <div class="col-md-9">
            <lookup input-id="RoleId"
                    lookup-id="lookup-role"
                    record-id="@Model.Id"
                    entity-name="Role"
                    display-column="Name"
                    display-columnset="Name:[Role Name]#ModifiedOn:[Modified On]"
                    class-val="form-control input-sm"
                    target-modal="global-lookup-modal"
                    lookup-title="Select Role">
            </lookup>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>*@
</form>
<form asp-controller="ApplicationRole" asp-action="ChangeStatus"
      id="changestatus-form"
      data-ajax-mode="replace"
      data-ajax-update="#record-form-container"
      data-ajax-loading="#application_loading"
      data-ajax="true"
      data-ajax-complete="Portal.Exec_FormBehavior"
      data-ajax-method="POST"
      class="form-horizontal">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FormType" />
</form>