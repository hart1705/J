@model PORTAL.DAL.EF.Models.Annotation
<div id="annotation-form-container">
    <form asp-controller="Annotation" asp-action="Delete"
          data-ajax-mode="replace" data-ajax-update="#annotation-modal-content"
          data-ajax-loading="#annotation-deleteloading"
          data-ajax="true" data-ajax-method="POST" class="form-horizontal">
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 id="myModalLabel" class="modal-title">Delete Note</h4>
        </div>
        <div class="modal-body" id="annotation-modal-body">
            <div class="row">
                <div class="col-md-12 control-label-right">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger">Error occurred:</div>
                </div>
                <div class="col-md-12">
                    <p style="margin-left:25px;">Are you sure you want to delete this record?</p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Subject):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.NoteText):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.NoteText)
                        </dd>
                        <dt>
                            Attachment:
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FileName)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-flat btn-default" data-dismiss="modal" style="width:65px;">Cancel</button>
            <button type="submit" class="btn btn-sm btn-flat btn-danger" style="width:65px;">Delete<i id="annotation-deleteloading" class="fa fa-spinner fa-spin" style="display:none"></i></button>
        </div>
    </form>
</div>