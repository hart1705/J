@model PORTAL.WEB.Models.HelperViewModels.RecordDeleteViewModel

<form asp-controller="@Model.ControllerName" asp-action="@Model.ActionName"
      data-ajax-mode="replace" data-ajax-update="#record-delete-modal-content"
      data-ajax-loading="#record-delete-deleteloading"
      data-ajax="true" data-ajax-method="POST" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 id="myModalLabel" class="modal-title">@Model.Title</h4>
    </div>
    <div class="modal-body" id="record-delete-modal-body">
        <div class="row">
            <div class="col-md-12 control-label-right">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger">Error occurred:</div>
            </div>
            <div class="col-md-12">
                @if (string.IsNullOrWhiteSpace(Model.DeleteMsg))
                {
                    <text>
                    Are you sure you want to delete this record ?
                    </text>
                }
                else
                {
                    @Model.DeleteMsg
                }
                <dl class="dl-horizontal">
                    @foreach (var detail in Model.RecordDetail)
                    {
                        <dt>
                            @detail.Label : 
                        </dt>
                        <dd>
                            @detail.Value
                        </dd>
                    }
                </dl>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-flat btn-default" data-dismiss="modal" style="width:65px;">Cancel</button>
        <button type="submit" class="btn btn-sm btn-flat btn-danger" style="width:65px;">Delete<i id="record-delete-deleteloading" class="fa fa-spinner fa-spin" style="display:none"></i></button>
    </div>
</form>
